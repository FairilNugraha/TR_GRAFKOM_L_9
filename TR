}

void init(void)
{
    glClearColor(0.0, 0.0, 0.0, 0.0);
    glMatrixMode(GL_PROJECTION);
    glEnable(GL_DEPTH_TEST);
    is_depth = 1;
    glMatrixMode(GL_MODELVIEW);
    glPointSize(10.0);
}
void tribunbelakang(void)
{
double ymax = 7.0;double y2max = 28.0;
double y=-8.0;double z=-38.01;double x1= -20.5;double x2=20.51;double x3=-25.5;double x6=25.5;//lt1
double y2=13.0;double z2=z-16;double x4= x3-16;double x5=x2+21;//lt2
while (y<=ymax)
{
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x1,y,z);
    glVertex3f(x2,y,z);
    glVertex3f(x2,y+0.8,z);
    glVertex3f(x1,y+0.8,z);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x1,y,z+0.5);
    glVertex3f(x2,y,z+0.5);
    glVertex3f(x2,y,z);
    glVertex3f(x1,y,z);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x1,y,z);
    glVertex3f(x2,y,z);
    glVertex3f(x2,y-0.8,z);
    glVertex3f(x1,y-0.8,z);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x1,y-0.8,z+1);
    glVertex3f(x2,y-0.8,z+1);
    glVertex3f(x2,y-0.8,z);
    glVertex3f(x1,y-0.8,z);
    glEnd();
    if (y>=0)
    {
        glBegin(GL_POLYGON);//senderan
        glColor3ub(204, 2, 2);
        glVertex3f(x3,y,z);
        glVertex3f(x6,y,z);
        glVertex3f(x6,y+0.8,z);
        glVertex3f(x3,y+0.8,z);
        glEnd();
        glBegin(GL_POLYGON);//dudukan
        glColor3ub(255, 0, 0);
        glVertex3f(x3,y,z+0.5);
        glVertex3f(x6,y,z+0.5);
        glVertex3f(x6,y,z);
        glVertex3f(x3,y,z);
        glEnd();
        glBegin(GL_POLYGON);//bawah bangku
        glColor3ub(94, 94, 94);
        glVertex3f(x3,y,z);
        glVertex3f(x6,y,z);
        glVertex3f(x6,y-0.8,z);
        glVertex3f(x3,y-0.8,z);
        glEnd();
        glBegin(GL_POLYGON);//alas
        glColor3ub(165, 168, 166);
        glVertex3f(x3,y-0.8,z+1);
        glVertex3f(x6,y-0.8,z+1);
        glVertex3f(x6,y-0.8,z);
        glVertex3f(x3,y-0.8,z);
        glEnd();
    }
    y++;z--;x1--;x2++;x3--;x6++;
}
while (y2<=y2max)
{
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x4,y2,z2);
    glVertex3f(x5,y2,z2);
    glVertex3f(x5,y2+0.8,z2);
    glVertex3f(x4,y2+0.8,z2);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x4,y2,z2+0.5);
    glVertex3f(x5,y2,z2+0.5);
    glVertex3f(x5,y2,z2);
    glVertex3f(x4,y2,z2);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x4,y2,z2);
    glVertex3f(x5,y2,z2);
    glVertex3f(x5,y2-0.8,z2);
    glVertex3f(x4,y2-0.8,z2);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x4,y2-0.8,z2+1);
    glVertex3f(x5,y2-0.8,z2+1);
    glVertex3f(x5,y2-0.8,z2);
    glVertex3f(x4,y2-0.8,z2);
    glEnd();
    y2++;z2--;x4--;x5++;
}

    glBegin(GL_POLYGON);//TENGAHAN bawah
    glColor3ub(77, 77, 77);
    glVertex3f(-51.7,7,-53.01);
    glVertex3f(51.7,7,-53.01);
    glVertex3f(51.7,7,-64.1);
    glVertex3f(-51.7,7,-64.1);
    glEnd();

    glBegin(GL_POLYGON);//tengahan atas
    glColor3ub(179, 175, 175);
    glVertex3f(-51.7,13,-55.01);
    glVertex3f(51.7,13,-55.01);
    glVertex3f(51.7,13,-64.1);
    glVertex3f(-51.7,13,-64.1);
    glEnd();


}
void tribunkanan(void)
{
double ymax = 7.0;double y2max = 28.0;
double y=-8.0; double x=25.51; double z1=-33.01; double z2=33.01;double z3=38.01;double z6=-38.01;//lt1
double y2=13.0;double x2=x+16;double z4= z1-21;double z5=z3+16;//lt2
while (y<=ymax)
{
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x,y,z1);
    glVertex3f(x,y,z2);
    glVertex3f(x,y+0.8,z2);
    glVertex3f(x,y+0.8,z1);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x,y,z1);
    glVertex3f(x,y,z2);
    glVertex3f(x-0.5,y,z2);
    glVertex3f(x-0.5,y,z1);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x,y,z1);
    glVertex3f(x,y,z2);
    glVertex3f(x,y-0.8,z2);
    glVertex3f(x,y-0.8,z1);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x-1,y-0.8,z1);
    glVertex3f(x-1,y-0.8,z2);
    glVertex3f(x,y-0.8,z2);
    glVertex3f(x,y-0.8,z1);
    glEnd();
    if(y>=0)
    {
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x,y,z6);
    glVertex3f(x,y,z3);
    glVertex3f(x,y+0.8,z3);
    glVertex3f(x,y+0.8,z6);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x,y,z6);
    glVertex3f(x,y,z3);
    glVertex3f(x-0.5,y,z3);
    glVertex3f(x-0.5,y,z6);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x,y,z6);
    glVertex3f(x,y,z3);
    glVertex3f(x,y-0.8,z3);
    glVertex3f(x,y-0.8,z6);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x-1,y-0.8,z6);
    glVertex3f(x-1,y-0.8,z3);
    glVertex3f(x,y-0.8,z3);
    glVertex3f(x,y-0.8,z6);
    glEnd();
    }
    x++;y++;z1--;z2++;z3++;z6--;
}
while (y2<=y2max)
{
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x2,y2,z4);
    glVertex3f(x2,y2,z5);
    glVertex3f(x2,y2+0.8,z5);
    glVertex3f(x2,y2+0.8,z4);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x2,y2,z4);
    glVertex3f(x2,y2,z5);
    glVertex3f(x2-0.5,y2,z5);
    glVertex3f(x2-0.5,y2,z4);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x2,y2,z4);
    glVertex3f(x2,y2,z5);
    glVertex3f(x2,y2-0.8,z5);
    glVertex3f(x2,y2-0.8,z4);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x2-1,y2-0.8,z4);
    glVertex3f(x2-1,y2-0.8,z5);
    glVertex3f(x2,y2-0.8,z5);
    glVertex3f(x2,y2-0.8,z4);
    glEnd();
    x2++;y2++;z4--;z5++;
}
    glBegin(GL_POLYGON);//TENGAHAN bawah
    glColor3ub(77, 77, 77);
    glVertex3f(40,7,-64.1);
    glVertex3f(40,7,64.1);
    glVertex3f(51.7,7,64.1);
    glVertex3f(51.7,7,-64.1);
    glEnd();

    glBegin(GL_POLYGON);//tengahan atas
    glColor3ub(179, 175, 175);
    glVertex3f(40,13,-64.1);
    glVertex3f(40,13,64.1);
    glVertex3f(51.7,13,64.1);
    glVertex3f(51.7,13,-64.1);
    glEnd();
    }
void tribunkiri()
{
double ymax = 7.0;double y2max = 28.0;
double y=-8.0; double x=-25.51; double z1=32.51; double z2=-32.51;double z3=-38.01;double z6=38.01;
double y2=13.0;double x2=x-16;double z4=z1+21;double z5=z3-16;
while (y<=ymax)
{
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x,y,z1);
    glVertex3f(x,y,z2);
    glVertex3f(x,y+0.8,z2);
    glVertex3f(x,y+0.8,z1);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x,y,z1);
    glVertex3f(x,y,z2);
    glVertex3f(x+0.5,y,z2);
    glVertex3f(x+0.5,y,z1);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x,y,z1);
    glVertex3f(x,y,z2);
    glVertex3f(x,y-0.8,z2);
    glVertex3f(x,y-0.8,z1);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x+1,y-0.8,z1);
    glVertex3f(x+1,y-0.8,z2);
    glVertex3f(x,y-0.8,z2);
    glVertex3f(x,y-0.8,z1);
    glEnd();
    if(y>=0)
    {
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x,y,z6);
    glVertex3f(x,y,z3);
    glVertex3f(x,y+0.8,z3);
    glVertex3f(x,y+0.8,z6);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x,y,z6);
    glVertex3f(x,y,z3);
    glVertex3f(x+0.5,y,z3);
    glVertex3f(x+0.5,y,z6);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x,y,z6);
    glVertex3f(x,y,z3);
    glVertex3f(x,y-0.8,z3);
    glVertex3f(x,y-0.8,z6);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x+1,y-0.8,z6);
    glVertex3f(x+1,y-0.8,z3);
    glVertex3f(x,y-0.8,z3);
    glVertex3f(x,y-0.8,z6);
    glEnd();
    }
    x--;y++;z1++;z2--;z3--;z6++;
}
while (y2<=y2max)
{
    glBegin(GL_POLYGON);//senderan
    glColor3ub(204, 2, 2);
    glVertex3f(x2,y2,z4);
    glVertex3f(x2,y2,z5);
    glVertex3f(x2,y2+0.8,z5);
    glVertex3f(x2,y2+0.8,z4);
    glEnd();
    glBegin(GL_POLYGON);//dudukan
    glColor3ub(255, 0, 0);
    glVertex3f(x2,y2,z4);
    glVertex3f(x2,y2,z5);
    glVertex3f(x2+0.5,y2,z5);
    glVertex3f(x2+0.5,y2,z4);
    glEnd();
    glBegin(GL_POLYGON);//bawah bangku
    glColor3ub(94, 94, 94);
    glVertex3f(x2,y2,z4);
    glVertex3f(x2,y2,z5);
    glVertex3f(x2,y2-0.8,z5);
    glVertex3f(x2,y2-0.8,z4);
    glEnd();
    glBegin(GL_POLYGON);//alas
    glColor3ub(165, 168, 166);
    glVertex3f(x2+1,y2-0.8,z4);
    glVertex3f(x2+1,y2-0.8,z5);
    glVertex3f(x2,y2-0.8,z5);
    glVertex3f(x2,y2-0.8,z4);
    glEnd();
    x2--;y2++;z4++;z5--;
}
 glBegin(GL_POLYGON);//TENGAHAN bawah
    glColor3ub(77, 77, 77);
    glVertex3f(-40,7,-64.1);
    glVertex3f(-40,7,64.1);
    glVertex3f(-51.7,7,64.1);
    glVertex3f(-51.7,7,-64.1);
    glEnd();

    glBegin(GL_POLYGON);//tengahan atas
